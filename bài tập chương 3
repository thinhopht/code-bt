#include<iostream>
#include<string> 
using namespace std;

 class hoadon{
 	float kl,dg,thanhtien,mavt; 
	string  tenvt,phieu,ngaylap;
	public :
	 void nhap();
	 void inhoadon();
 
 }; 
  void hoadon::nhap() {
    cout << "moi ban nhap ten vat tu:" ;getline(cin,tenvt); cin.ignore(1);
  	cout << "nmoi ban nhap gay lap: " ;getline(cin,ngaylap);cin.ignore(1);
  	cout << "moi ban nhap loai phieu :" ;getline( cin,phieu);cin.ignore(1);
  	cin.ignore(3);
  	cout << "moi ban nhap ma vat tu:"; cin >> mavt;
  	cout << "moi ban nhap khoi luong :" ;cin >>kl;
  	cout <<"moi ban nhap don gia :" ;cin >> dg;
}
  
  void hoadon::inhoadon(){
   thanhtien=dg*kl;
   cout << "thanh tien  hoa don cua ban la:"<< thanhtien;
   
}
 
 
 
 
 
  int main (){
  	int i,n,j; cout << "nhap danh sach hoa don :"; cin >> n;
    hoadon a; a.nhap(); 
	
   }
