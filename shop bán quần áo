            <script>
                function updateColorPreview() {
                    const colorSelect = document.getElementById('color');
                    const selectedOption = colorSelect.options[colorSelect.selectedIndex];
                    const colorPreview = document.getElementById('previewImage');
                    colorPreview.src = selectedOption.dataset.image; // Cập nhật ảnh mô tả màu
                }
            </script>
            <!-- Chọn size -->
